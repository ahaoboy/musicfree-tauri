{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "desktop",
  "description": "Desktop capabilities for the main window",
  "platforms": [
    "linux",
    "macOS",
    "windows"
  ],
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "fs:read-all",
    "fs:write-all",
    "clipboard-manager:default",
    "clipboard-manager:allow-write-text",
    "core:window:default",
    "updater:default",
    "updater:allow-check",
    "updater:allow-download-and-install"
  ]
}