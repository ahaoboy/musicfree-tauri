{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "musicfree",
  "version": "0.1.0",
  "identifier": "com.ahaoboy.musicfree",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "musicfree",
        "width": 393,
        "height": 852,
        "decorations": true,
        "transparent": true,
        "resizable": false,
        "center": true
      }
    ],
    "security": {
      "csp": null,
      "freezePrototype": false,
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": [
            "**"
          ]
        }
      },
      "capabilities": [
        "mobile"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": false,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
